<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TreeView x:Name="treeView" HorizontalAlignment="Left" Height="373" Margin="10,36,0,0" VerticalAlignment="Top" Width="371"/>
        <ToolBar Header="menu" x:Name="menu" HorizontalAlignment="Left" Height="21" Margin="10,10,0,0" VerticalAlignment="Top" Width="100">
            <Menu Height="50" VerticalAlignment="Top" Width="100" >
                <MenuItem Header="_Open" Click="Open" Margin="0"/>
                <MenuItem Header="_Exit" Click="Exit"/>
            </Menu>
        </ToolBar>
        <ScrollViewer x:Name="Viewer" HorizontalAlignment="Left" Height="373" Margin="386,36,0,0" VerticalAlignment="Top" Width="396"/>
        <StatusBar  HorizontalAlignment="Left" Height="32" Margin="10,377,0,0" VerticalAlignment="Top" Width="281">
            <TextBlock x:Name="paremetrybar"  Width="150" RenderTransformOrigin="2.182,0.562" />

        </StatusBar>

    </Grid>
</Window>
